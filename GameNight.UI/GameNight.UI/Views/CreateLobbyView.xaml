<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GameNight.UI.Views.CreateLobbyView">
    <ContentPage.Content>
        <StackLayout VerticalOptions="FillAndExpand"  Padding="3">

            <StackLayout Orientation="Horizontal">
                <Label Text="Password:" VerticalOptions="Center"></Label>
                <Entry Text="{Binding Password}" IsPassword="True" WidthRequest="200"></Entry>
            </StackLayout>

            <StackLayout Orientation="Horizontal">
                <Label Text="User Name:" VerticalOptions="Center"></Label>
                <Entry Text="{Binding UserName}" WidthRequest="200"></Entry>
            </StackLayout>

            <StackLayout>
                <Button HorizontalOptions="Center" Text="Create a game!" Command="{Binding CreateClicked}"></Button>
            </StackLayout>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>